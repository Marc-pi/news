<?php $this->css($this->assetModule('css/block.css', 'news')); ?>
<div class="itemBlock itemBlockitem">
	<?php foreach($block['resources'] as $story) { ?>
	<div class="item">
	   <div class="itemHead">
			<span class="itemTitle">
			    <h3><a href="<?php echo $this->url($module . '-news', array('module' => $module ,'controller' => 'story' ,'alias' => $this->escape($story['alias']))); ?>" title="<?php echo $this->escape($story['title']); ?>"><?php echo $this->escape($story['title']); ?></a></h3>
		   </span>
		</div>
		<?php if($block['showdate'] || $block['showhits']){ ?>
		<div class="itemInfo">
			<?php if($block['showdate']){ ?><span class="itemPostDate"><?php _e('Update Time'); ?>:<?php echo $this->escape($story['publish']); ?></span><?php } ?>
			<?php if($block['showhits']){ ?><span class="itemStats"><?php _e('Read'); ?>:<?php echo $this->escape($story['hits']); ?></span><?php } ?>
		</div>
		<?php } ?>
		<?php if($block['showimage'] || $block['showdesc']){ ?>
		<div class="itemBody">
		   <?php if($block['showimage'] && !empty($story['thumburl'])){ ?><div class="itemImage left"><img class="left story_img" src="<?php echo $story['thumburl']; ?>" alt="<?php echo $this->escape($story['title']); ?>" /></div><?php } ?>
		   <?php if($block['showdesc']){ ?><div class="itemText"><?php echo $story['short']; ?></div><?php } ?>
		   <div class="clearfix"></div>
	   </div>
	   <?php } ?>
	   <?php if($block['showmore']){ ?>
		   <div class="itemFoot">
			   <span class="itemMore"><a href="<?php echo $this->url($module . '-news', array('module' => $module ,'controller' => 'story' ,'alias' => $this->escape($story['alias']))); ?>" title="<?php echo $this->escape($story['title']); ?>"><?php _e('Read More'); ?></a></span>
		   </div>
		<?php } ?>
	</div>
	<?php } ?>
</div>